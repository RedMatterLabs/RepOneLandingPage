{
  "extends": "stylelint-config-standard",

  "rules": {
    "string-quotes": "single",
    "selector-no-id": true,
    "property-no-unknown": [true, {"ignoreProperties": ["composes"]}],
    "selector-pseudo-class-no-unknown": [ true, {
      "ignorePseudoClasses": ["export", "import", "global", "local"],
    }]
  }
}
